{{>layouts/header}}

{{#article}}
<form class="container" action="/articles/update" method="post">  {{!아쉽지만 form은 get과 post만 가능}}
    <input name="id" type="hidden" value="{{id}}" />
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{article.title}}">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="subject">{{article.subject}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles/{{articles.id}}">Back</a>
</form>
{{/article}}

{{>layouts/footer}}